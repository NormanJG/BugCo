<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.cab302.bugco.HomeController"
           styleClass="root-terminal"
           maxWidth="Infinity" maxHeight="Infinity">

    <BorderPane maxWidth="Infinity" maxHeight="Infinity">

        <top>
            <VBox spacing="10" BorderPane.alignment="CENTER">
                <HBox alignment="CENTER" styleClass="banner panel">
                    <Label text="TERMINAL ACCESS SYSTEM" styleClass="banner-title"/>
                </HBox>
                <HBox alignment="CENTER" styleClass="banner panel">
                    <Label text="  [Version 0.0.2]  –  Security Protocol Activated" styleClass="banner-sub"/>
                </HBox>
            </VBox>
        </top>

        <center>
            <GridPane hgap="20" vgap="20" maxWidth="Infinity" maxHeight="Infinity">
                <columnConstraints>
                    <ColumnConstraints percentWidth="40"/>
                    <ColumnConstraints percentWidth="60"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints percentHeight="60" vgrow="ALWAYS"/>
                    <RowConstraints percentHeight="40" vgrow="ALWAYS"/>
                </rowConstraints>

                <VBox GridPane.columnIndex="0" spacing="8" styleClass="panel" maxHeight="Infinity" maxWidth="Infinity">
                    <HBox spacing="8" alignment="CENTER_LEFT" styleClass="panel-titlebar">
                        <Circle styleClass="dot-red" radius="6"/>
                        <Circle styleClass="dot-amber" radius="6"/>
                        <Circle styleClass="dot-green" radius="6"/>
                        <Label text="BUGCO INDUSTRIES ™" styleClass="panel-title"/>
                    </HBox>

                    <Pane fx:id="imagePane" styleClass="panel-body"
                          VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity">
                        <ImageView fx:id="imageView"
                                   preserveRatio="true" smooth="true" pickOnBounds="true"/>
                    </Pane>
                </VBox>

                <VBox GridPane.columnIndex="1" spacing="8" styleClass="panel" maxHeight="Infinity" maxWidth="Infinity">
                    <HBox spacing="8" alignment="CENTER_LEFT" styleClass="panel-titlebar">
                        <Circle styleClass="dot-red" radius="6"/>
                        <Circle styleClass="dot-amber" radius="6"/>
                        <Circle styleClass="dot-green" radius="6"/>
                        <Label text="BUGCO  INDUSTRIES ™  LEADERBOARD" styleClass="panel-title"/>
                    </HBox>

                    <StackPane styleClass="panel-body" VBox.vgrow="ALWAYS" maxHeight="Infinity">
                        <TextArea fx:id="leaderboardArea" editable="false"
                                  styleClass="terminal-area"
                                  wrapText="true"
                                  VBox.vgrow="ALWAYS" maxHeight="Infinity"/>
                    </StackPane>
                </VBox>

                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"
                      spacing="8" styleClass="panel" maxHeight="Infinity" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                    <HBox spacing="8" alignment="CENTER_LEFT" styleClass="panel-titlebar">
                        <Circle styleClass="dot-red" radius="6"/>
                        <Circle styleClass="dot-amber" radius="6"/>
                        <Circle styleClass="dot-green" radius="6"/>
                        <Label text="BUGCO  INDUSTRIES ™  TERMLINK TERMINAL" styleClass="panel-title"/>
                    </HBox>

                    <VBox spacing="12" styleClass="panel-body" VBox.vgrow="ALWAYS" maxHeight="Infinity">
                        <TextArea fx:id="terminalArea" editable="false" wrapText="true"
                                  styleClass="terminal-area" prefRowCount="12"
                                  VBox.vgrow="ALWAYS" maxHeight="Infinity"/>

                        <HBox alignment="CENTER" spacing="14">
                            <Button text="GAME INFO" onAction="#onGameInfo" styleClass="amber-btn"
                                    maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                            <Button text="LOGOUT" onAction="#onLogout" styleClass="amber-btn"
                                    maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                        </HBox>

                        <Button text="INITIALISE HACKING PROTOCOLS" maxWidth="Infinity"
                                onAction="#onStart" styleClass="primary-btn"/>

                        <Label text="WAITING FOR USER INPUT..." styleClass="status-label"/>
                    </VBox>
                </VBox>
            </GridPane>
        </center>
    </BorderPane>
</StackPane>
